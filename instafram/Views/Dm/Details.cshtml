@model instafram.Models.Dm

<h2>DM Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Sender</dt>
        <dd class="col-sm-10">@Model.Sender?.Username</dd> 

        <dt class="col-sm-2">Recipient</dt>
        <dd class="col-sm-10">@Model.Recipient?.Username</dd> 

