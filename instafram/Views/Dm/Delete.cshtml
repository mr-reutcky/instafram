@model instafram.Models.Dm

<h2>Delete DM</h2>

<h3>Are you sure you want to delete this DM?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Sender</dt>
        <dd class="col-sm-10">@Model.Sender?.Username</dd>

        <dt class="col-sm-2">Recipient</dt>
        <dd class="col-sm-10">@Model.Recipient?.Username</dd>

        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Timestamp</dt>
        <dd class="col-sm-10">@Model.Timestamp</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Dmid" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>